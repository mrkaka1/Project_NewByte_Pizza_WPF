                <Image Source="/Resourses/Icons/Cart-Off.png" Height="20" Width="20"/>
                <Image Source="/Resourses/Icons/Follow-Off.png" Height="20" Width="20"/>
            </StackPanel>

            <!--#region SET GRID -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="70*" />
                <ColumnDefinition Width="630*" />
                <ColumnDefinition Width="60*" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
            </Grid.RowDefinitions>
            <!--#endregion SET GRID-->
